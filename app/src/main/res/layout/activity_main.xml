<?xml version="1.0" encoding="UTF-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/bRutina"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rutina"
                android:fontFamily="@font/comfortaa"
                android:text="@string/b_rutina"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/bCreaRutina"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/crearrutina"
                android:fontFamily="@font/comfortaa"
                android:text="@string/b_crea_rutina"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/bCrearRutinaAleatoria"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rutinaaleatoria"
                android:fontFamily="@font/comfortaa"
                android:text="@string/b_crear_rutina_random"
                android:textAlignment="center"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/bHistorialRutina"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/historial"
                android:fontFamily="@font/comfortaa"
                android:text="@string/b_historial"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>