<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fitness.sportgenertaion.fitnesstrainer.ModificarRutina"
    tools:layout_editor_absoluteY="81dp"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNivel"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/comfortaa"
                android:text="@string/tv_nivel"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spNivel"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvGrupoMuscular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/comfortaa"
                android:text="grupo muscular"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spMusculo"
                android:layout_width="248dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvEjercicios"
            android:layout_width="match_parent"
            android:layout_height="449dp">

        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/bGuargar"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:background="#FF6859"
            android:fontFamily="@font/comfortaa"
            android:text="@string/b_guardar3"
            android:visibility="visible" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
