<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fitness.sportgenertaion.fitnesstrainer">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/SplashTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VerEjercicio"
            android:label="@string/title_activity_ver_ejercicio"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Dias"
            android:label="@string/title_activity_dias"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".VerRutinasPredeterminada"
            android:label="@string/title_activity_dias"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CrearRutinas"
            android:label="@string/title_activity_crear_rutinas"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".ModificarRutina"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MostrarDia"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RutinasPredefinidas"
            android:screenOrientation="portrait" />
        <activity android:name=".FuturasActualizaciones.AnyadirEjercicio"></activity>
    </application>

</manifest>